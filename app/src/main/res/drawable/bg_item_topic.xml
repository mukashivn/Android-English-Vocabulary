<?xml version="1.0" encoding="utf-8" ?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle" android:thickness="1dp">
            <corners android:radius="5dp" />
            <solid android:color="#40000000" />
        </shape>
    </item>
    <item>
        <shape xmlns:android="http://schemas.android.com/apk/res/android" android:shape="rectangle" android:thickness="1dp">
            <corners android:radius="5dp" />
            <stroke android:width="1dp" android:color="#1e000000" />
            <gradient android:startColor="@color/colorAccent" android:endColor="@color/colorTint" android:angle="90.0" />
        </shape>
    </item>
</selector>
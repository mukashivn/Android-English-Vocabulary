<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!--ImageView Style-->
    <style name="ImageViewStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="ImageViewItemTopic">
        <item name="android:layout_width">56dp</item>
        <item name="android:layout_height">56dp</item>
        <item name="android:layout_marginStart">@dimen/margin_standard</item>
        <item name="android:layout_marginEnd">@dimen/margin_standard</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:tint">@color/white</item>
    </style>

    <!--TextView Style-->
    <style name="TextViewStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="TextViewStyle.ItemTopic">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">14sp</item>>
        <item name="fontPath">fonts/source-sans-pro/Montserrat-SemiBold.ttf</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="TextViewStyle.ToolbarHead">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="TextViewStyle.SubToolbarHead">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="BottomSheet.StyleDialog" parent="BottomSheet.Dialog">
        <item name="android:textColorPrimary">#263238</item>
        <item name="android:textColorSecondary">#263238</item>
        <item name="android:textColorHint">#263238</item>
        <item name="android:textSize">14sp</item>
        <item name="fontPath">fonts/source-sans-pro/Montserrat-SemiBold.ttf</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="BottomDialogs" parent="@android:style/Theme.Dialog">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:windowAnimationStyle">@style/BottomDialogsAnimation</item>
    </style>

    <style name="BottomDialogsAnimation">
        <item name="android:windowEnterAnimation">@anim/sheet_show</item>
        <item name="android:windowExitAnimation">@anim/sheet_hide</item>
    </style>

    <style name="Theme_Dialog" parent="@android:style/Theme.Holo.Dialog">
        <item name="android:windowMinWidthMajor">90%</item>
        <item name="android:windowMinWidthMinor">90%</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@color/white</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>
</resources>